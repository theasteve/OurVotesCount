
<h1 class="text-center">Transportations for <%= @protest.name %></h1>

<div class="container">
  <div class="panel-body ">
						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Developers" />
					</div>
					<table class="table table-hover" id="dev-table">
						<thead>
							<tr>
								<th>Leaving From</th>
								<th>Data and Time</th>
								<th>Action</th>
							</tr>
						</thead>

						<tbody>
                <% @transportations.each do |transportation| %>
                <tr>
                  <td><%= transportation.pickup_location %></td>
                  <td><%= @protest.starts_at.to_formatted_s(:short).to_date %></td>

                  <td><%= button_to "Join the Ride", user_protest_transportation_passengers_path(transportation_id: transportation.id), class: "btn btn-primary"  %></td>
                </tr>
                <% end %>
						</tbody>
					</table>
				</div>
			</div>
</div>
